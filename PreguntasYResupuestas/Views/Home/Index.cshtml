@{
    ViewData["Title"] = "Preguntas y respuestas";

}
@model Core.Models.User


<div class="text-center">
    <h1 class="display-4">Preguntas y respuestas</h1>
    <p>Challenge tecnico SOFKA U 2022.</p>


    <div class="d-flex justify-content-around">
        <div>
            <h3>High scores</h3>
            <table>
                <thead></thead>
                <tr>
                    <th>Usuario</th>
                    <th>Puntos</th>
                </tr>
                @foreach (Game game in ViewBag.Games)
                {
                    <tr><td>@game.User.UserName</td><td>@game.Score.Points</td></tr>
                }



            </table>
        </div>
        <form action="@Url.Action("NewGame", "Home")" method="POST">

            <div>
                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, "Ingrese un nombre de usuario para iniciar un juego", htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-10">
                        <input type="text" required id="userName" name="userName" class="form-control" />
                        @Html.ValidationMessageFor(model => model.UserName, "Nombre de usuario requerido", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Jugar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
    @section navHome {

        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Inicio del juego</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HowToPlay">Como Jugar</a>

                            <span class="navbar-toggler-icon"></span>
                        </button>

                    </li>
                </ul>
            </div>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index"> Crear categorias    </a>

                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </li>
                </ul>
            </div>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index"> Crear preguntas    </a>

                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    }
</div>
